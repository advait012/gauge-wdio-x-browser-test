/**
 * This Pipeline script is used to run the post deploy jobs in gauge-wdio-x-browser
 *
 * NOTE: Any changes to this file will impact the above mentioned jobs, so make changes wisely.
 */

timestamps {
    node(label: 'master') {
        stage('Checkout Git Repo') {
            url: 'https://github.com/advait012/gauge-wdio-x-browser-test.git'
        }
        stage('Install') {
            sh 'C:/Users/advsharm/Documents/gauge-wdio-x-browser-test/bin/install.sh'
        }
        stage('Run tests') {
                    try {
                        script = "C:/Users/advsharm/Documents/gauge-wdio-x-browser-test/bin/gauge-tests.sh --headless"
                        sh "C:/Users/advsharm/Documents/gauge-wdio-x-browser-test/bin/run.sh  ${script}"
                        currentBuild.result = 'SUCCESS'
                    }
                    catch(err) {
                        currentBuild.result = 'FAILURE'
                    }
        }
        
        stage('PublishResultToInflux') {
            step([$class: 'InfluxDbPublisher', customData: null, customDataMap: null, customPrefix: null, target: 'metric'])
        }
        stage('Clean Workspace') {
            cleanWs notFailBuild: true
        }
    }
}
